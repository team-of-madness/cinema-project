@model Movie
@{
    ViewData["Title"] = "_CreateOrEditMoviesPartialView";
    var isCreate = Model.Id == 0;
}
<head>
    <link rel="stylesheet" href="~/css/partialView.css" asp-append-version="true" />
</head>
<div class="modal fade" role="dialog" tabindex="-1" id="addMovie" aria-labelledby="addMovieLable" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable" role="document">
        <div class="modal-content" style="background-color:lightblue !important;">
            <div class="modal-header"><h3>Movie</h3></div>
            <div class="modal-body">
               <form asp-action="CreateOrEdit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id"/>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" required maxlength="40" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" required maxlength="350" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Duration" class="control-label"></label>
                        <input asp-for="Duration" class="form-control" required min="1" max="300"/>
                        <span asp-validation-for="Duration" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MinAge" class="control-label"></label>
                        <input asp-for="MinAge" class="form-control" required min="0" max="18" />
                        <span asp-validation-for="MinAge" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Producer" class="control-label"></label>
                        <input asp-for="Producer" class="form-control onlyLettersField" required maxlength="35" />
                        <span asp-validation-for="Producer" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="GenreId" class="control-label"></label>
                        <select asp-for="GenreId" class="form-control" asp-items="@(new SelectList(ViewBag.Genre, nameof(Genre.Id), nameof(Genre.GenreName)))" required><option> Select one </option> </select>
                        <span asp-validation-for="GenreId" class="text-danger"></span>
                    </div>
                    <div class="modal-footer">
                        <input type="submit" value="@(isCreate?"Create":"Edit")" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/js/validator.js" type="text/javascript" asp-append-version="true"></script>
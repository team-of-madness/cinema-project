@model cinema_project.Models.Seat

@{
    ViewData["Title"] = "_SeatDetailPartialView";
}


<div class="modal fade" role="dialog" tabindex="-1" id="seatDetails" aria-labelledby="seatDetailsLable" aria-hidden="true">
    <div class="modal-dialog" modal-lg modal-dialog-scrollable" role="document">
        <div class="modal-content" style="background-color:lightblue !important;">
            <div class="modal-header">
                <h3>Seat Details</h3>
            </div>
            <div class="modal-body">
                <dl class="row">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Row)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Row)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Column)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Column)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Hall)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Hall.Name)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>
